function App() {
  const [leftOpen, setLeftOpen] = useState(false);
  const [rightOpen, setRightOpen] = useState(false);
  const [leftWidth, setLeftWidth] = useState(300); // Increased initial width
  const [rightWidth, setRightWidth] = useState(300); // Increased initial width

  return (
    <div className="flex flex-col h-screen relative">
      <div className="flex flex-row flex-grow relative">
        {leftOpen && (
          <Resizable
            width={leftWidth}
            height={0}
            onResize={(event, { size }) => setLeftWidth(size.width)}
          >
            <div
              style={{ width: leftWidth }}
              className="bg-gray-100 p-4 absolute top-0 left-0 h-full z-10"
            >
              <TreeView data={treeData} />
            </div>
          </Resizable>
        )}
        <button
          onClick={() => setLeftOpen(!leftOpen)}
          className="absolute top-4 left-0 z-20"
          style={{ left: leftOpen ? leftWidth : 0 }}
        >
          {leftOpen ? <IconArrowBarRight size={32} /> : <IconArrowBarLeft size={32} />}
        </button>
        <div className="flex-1 p-4 flex flex-col">
          <Chat />
        </div>
        {rightOpen && (
          <Resizable
            width={rightWidth}
            height={0}
            onResize={(event, { size }) => setRightWidth(size.width)}
          >
            <div
              style={{ width: rightWidth }}
              className="bg-gray-100 p-4 absolute top-0 right-0 h-full z-10"
            >
              {accordionData.map((accordion, index) => (
                <Accordion key={index} title={accordion.title} content={accordion.content} />
              ))}
            </div>
          </Resizable>
        )}
        <button
          onClick={() => setRightOpen(!rightOpen)}
          className="absolute top-4 right-0 z-20"
          style={{ right: rightOpen ? rightWidth : 0 }}
        >
          {rightOpen ? <IconArrowBarLeft size={32} /> : <IconArrowBarRight size={32} />}
        </button>
      </div>
    </div>
  );
}

export default App;
